<div style="width:100%; height:100%; display:flex; justify-content:center; margin-top:12%; ">
    <div style="border-style:solid;padding:50px">
<h1>Edit User</h1>
<%= form_with url: "/pedit" do |form|%>


<div>
    <%= form.label :Name%>
    <%= form.text_field :name,value: @y.name %>
</div>
<br>
<div>
<%= form.label :Email %>
<%= form.text_field :email,value: @y.email %>
</div>
<br>
<div>
    <%= form.label :Department%>
    <%= form.text_field :department,value: @y.department %>
</div>
<br>
<div>
<%= form.label :Password %>
<%= form.text_field :password,value: @y.password %>
</div>
<br>
<div>
<%= form.label :Status %>
<%= form.text_field :status,value: @y.status %>
</div>
<br>

<%= form.submit "Update"%>
<br>
<br>
<button><%= link_to "Back","/admin"%></button>&nbsp; &nbsp; &nbsp;
<button><%= link_to "Log In","/signin" %></button>&nbsp; &nbsp; &nbsp;
<%end%>
</div>
