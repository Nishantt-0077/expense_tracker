<%= form_with url: "/search_user", method: :get do |form| %>
  <%= form.text_field :name %>
  <%= form.submit "Search" %>
<% end %>
<h1>User Details:</h1>
<table>
<head>
<style>
table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
th, td {
  padding: 5px;
  text-align: left;
}
</style>
   <tr>
        <th>Id:</th>
        <th>Name:</th>
        <th>Email:</th>
        <th>Department:</th>
        <th>Password:</th>
        <th>Status:</th>
        <th>User Type:</th>
        <th colspan=3>Actions:</th>
    </tr>
</thead>
<tbody>
   <% @up.each do |x|%>
         <tr>
            <td><%= x.id%></td>
            <td style="color:maroon;"><%= x.name %></td>
            <td><%= x.email %></td>
            <td><%= x.department%></td>
            <td><%= x.password%></td>
            <td><%= x.status%></td>
            <td><%= x.u_kind%></td>
           <td><button><%= link_to 'View', "/view/#{x.id}" %></button></td>
           <td><button><%= link_to 'Edit', "/edit/#{x.id}" %></button></td>
           <td><button><%= link_to 'Delete', "/delete/#{x.id}",method: :delete, data: { confirm: 'Are you sure?' } %> </button></td>
            
            
        </tr>
        <%end%>
    
</tbody>
</table>
<div style="display:flex; flex-direction:row">
<h2 style="margin-right:2%"><strong><%= link_to 'Add User',"/adduser"%></strong></h2>
